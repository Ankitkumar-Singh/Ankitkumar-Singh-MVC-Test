@model PatientManagement.Models.AdviceDetail

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container my-3">
        @Html.ActionLink("View message", "Index", new object { }, new { @class = "btn btn-primary" })
        <div class="card border-light mb-lg-5">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12  text-center">
                        <img class="img-responsive" src="~/Assets/Images/chat.png" height="120" width="120" />
                    </div>
                    <div class="col-md-6 offset-3 my-3">
                        <div class="form">
                            <h4>Message from patient </h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Patient name: </label>
                                <div>
                                    @Html.DropDownList("PatientId", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PatientMessage, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.PatientMessage, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.PatientMessage, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Please enter your message: </label>
                                <div>
                                    @Html.TextAreaFor(model => model.DoctorMessage, new { @class = "form-control", cols = 35, @rows = 3, @id = "doctorMsg", @onkeyup = "onchangeevent();" })
                                    @Html.ValidationMessageFor(model => model.DoctorMessage, "", new { @class = "text-danger" })
                                </div>
                                <label id="noticeMsg" class="text-warning">Please edit default message.</label>
                                <label id="errorMsg" class="text-danger"></label>
                            </div>
                            @Html.HiddenFor(model => model.AdviceId)
                            <div class="form-group">
                                <div class="float-right">
                                    <input type="submit" id="btnSubmit" value="Send Message" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/site.js"></script>