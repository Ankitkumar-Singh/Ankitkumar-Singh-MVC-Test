@model PatientManagement.Models.TreatmentDetail

<div class="container my-3">
    @Html.ActionLink("View Details", "Index", new object { }, new { @class = "btn btn-primary" })
    <div class="card border-light mb-lg-5">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12  text-center">
                    <img class="img-responsive" src="~/Assets/Images/pen.png" height="120" width="120" />
                </div>
                <div class="col-md-6 offset-3 my-3">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form">
                            <h4>TreatmentDetail</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.PatientId, "PatientId", htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.DropDownList("PatientId", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.PatientId)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TreatmentDate, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.TreatmentDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.TreatmentDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Treatment, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.Treatment, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Treatment, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Bill, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.Bill, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Bill, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.TreatmentId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.AppointmentId, "AppointmentId", htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.DropDownList("AppointmentId", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.AppointmentId, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.AppointmentId)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="float-right">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>