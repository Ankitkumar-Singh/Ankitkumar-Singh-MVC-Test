@model IEnumerable<PatientManagement.Models.AppointmentDetail>

<div class="container my-3">
    @*@Html.ActionLink("Home", "Index", "Assignment1", new object { }, new { @class = "btn btn-primary" })*@
    <div class="card border-light mb-lg-5">
        <div class="card-body text-center">
            <div class="row">
                <div class="col-md-12">
                    <img class="img-responsive" src="~/Assets/Images/agenda.png" height="120" width="120" />
                </div>
                <div class="col-md-12 my-4">
                    <strong> @Html.ActionLink("Click here to book your appointment", "Create", null, new { @class = "btn btn-lg btn-warning" })</strong>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="bs-docs-section">
    <div class="container ">
        <div class="page-header my-2">
            <h3 id="tables">Your appointment deatils. </h3>
        </div>
        <div class=" table-responsive ">

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SheduleDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiseaseInfo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AppointmentDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AppointmentTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SheduleUpdated)
                    </th>

                    <th></th>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="6">
                            No Appointments are shedule. Please book an appointment.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.OrderBy(item => item.AppointmentDate))
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SheduleDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiseaseInfo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>

                            @if (item.AppointmentDate == DateTime.Today)
                            {
                                <td class="table-warning">Todays Appointment</td>
                            }
                            else
                            {
                                <td>@Html.DisplayFor(modelItem => item.AppointmentDate)</td>

                            }

                            <td>
                                @Html.DisplayFor(modelItem => item.AppointmentTime)
                            </td>

                            @if (item.SheduleUpdated == true)
                            {
                                <td class="table-danger">Yes</td>
                            }
                            else
                            {
                                <td class="table-success">No</td>
                            }



                        </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>
