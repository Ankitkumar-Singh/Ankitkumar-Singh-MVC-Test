@model PatientManagement.Models.AppointmentDetail

<div class="container my-3">
    @Html.ActionLink("Back to Home", "Index", new object { }, new { @class = "btn btn-primary" })
    <div class="card border-primary mb-3">
        <div class="col-md-12 my-3  text-center">
            <img class="img-responsive" src="~/Assets/Images/pen.png" height="120" width="120" />
            <h4 class="my-2 text-center">Book Appointment</h4>
        </div>
        <div class="col-md-6 card-body offset-3 my-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.PatientId, "Select patient", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("PatientId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Age, "Enter age", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DiseaseInfo, "Enter disease details ", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.TextAreaFor(model => model.DiseaseInfo, new { @class = "form-control", cols = 35, @rows = 3 })
                        @Html.ValidationMessageFor(model => model.DiseaseInfo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AppointmentDate, "Select appointment date ", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.AppointmentDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AppointmentDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.AppointmentTime, "Select appointment time", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("AppointmentTime", new List<SelectListItem>
                            {
                            new SelectListItem { Text = "Morning: 9.00am to 12.00pm", Value="Morning: 9.00am to 12.00pm" },
                            new SelectListItem { Text = "Afternoon: 1.30pm to 4.30pm ", Value="Afternoon: 1.30pm to 4.30pm" },
                            new SelectListItem { Text = "Evening: 6.30pm to 10.30pm ", Value="Evening: 1.30pm to 4.30pm" }
                            }, "Select Appointment Time", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AppointmentTime, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="float-right">
                    <input class="btn btn-primary" type="submit" value="Book Appointment" />
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>