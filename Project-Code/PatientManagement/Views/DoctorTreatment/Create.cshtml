@model PatientManagement.Models.TreatmentDetail
<div class="container my-3">
    @Html.ActionLink("Back to Home", "Index", new object { }, new { @class = "btn btn-primary" })
    <div class="card border-primary mb-3">
        <div class="col-md-12 my-3  text-center">
            <img class="img-responsive" src="~/Assets/Images/pen.png" height="120" width="120" />
            <h4 class="my-2 text-center">Treatment Deatils</h4>
        </div>
        <div class="col-md-6 card-body offset-3 my-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form">
                    <h4>TreatmentDetail</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label">
                            Patient Name:
                        </label>
                        <div>
                            <label class="form-control disabled"> @ViewBag.patientName</label>
                        </div>
                    </div>
                    @Html.Hidden("PatientId", (object)ViewBag.PatientId)


                    <div class="form-group">
                        @Html.LabelFor(model => model.AppointmentId, "Disease details", htmlAttributes: new { @class = "control-label" })
                        <label class="form-control disabled"> @ViewBag.DiseaseInfo</label>
                        @Html.Hidden("AppointmentId", (object)ViewBag.AppointmentId)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Treatment, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Treatment, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Treatment, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Bill, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Bill, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bill, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="float-right">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
