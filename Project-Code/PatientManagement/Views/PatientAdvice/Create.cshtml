@model PatientManagement.Models.AdviceDetail

@using (Html.BeginForm("Create", "PatientAdvice", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container my-3">
        @Html.ActionLink("View message", "Index", new object { }, new { @class = "btn btn-primary" })
        <div class="card border-light mb-lg-5">
            <div class="card-body text-center">
                <div class="row">
                    <div class="col-md-12">
                        <img class="img-responsive" src="~/Assets/Images/Doctor-chat.png" height="120" width="120" />
                    </div>
                    <div class="col-md-6 offset-3 my-3">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form">
                            <div class="form-group">
                                <div>
                                    @Html.EditorFor(model => model.PatientMessage, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your message" } })
                                    @Html.ValidationMessageFor(model => model.PatientMessage, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Send Message" class="btn btn-lg btn-warning" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
