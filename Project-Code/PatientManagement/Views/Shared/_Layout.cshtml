<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Patient Management</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Site.css")" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />


</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <span class="navbar-brand">
            <img class="rounded-circle" width="40" height="40" src="~/Assets/images/logo.png" alt="Logo" />&nbsp;
            <span><strong>Patient Management </strong> </span>
        </span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto font-weight-bold active">

                @if (Session["UserRole"] != null)
                {
                    if (Session["UserRole"].ToString() == "Patient")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Appoinment", "Index", "PatientAppointment", new object { }, new { @class = "nav-link text-light" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Treatment", "PatientDetails", "PatientAppointment", new object { }, new { @class = "nav-link text-light" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Talk to Doctor", "Index", "PatientAdvice", new object { }, new { @class = "nav-link text-light" })
                        </li>
                    }
                    if (Session["UserRole"].ToString() == "Doctor")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Appointment", "Index", "DoctorAppointment", new object { }, new { @class = "nav-link text-light" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Treatment and Bill", "Index", "DoctorTreatment", new object { }, new { @class = "nav-link text-light" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Messages", "Index", "DoctorAdvice", new object { }, new { @class = "nav-link text-light" })
                        </li>
                    }
                }
            </ul>
            <ul class="navbar-nav ml-auto">

                @if (Session["UserRole"] != null)
                {

                    <li class="nav-link text-white font-weight-bold"><i class="fa fa-2x fa-user"></i> @Session["Username"]</li>

                    <li class="nav-link">@Html.ActionLink("Sign Out", "SignOut", "Auth", null, htmlAttributes: new { @class = "btn btn-rounded btn-danger btn-sm" })</li>
                }
            </ul>
        </div>
    </nav>

    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <script src="@Url.Content(" ~/Scripts/jquery-3.0.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html> 